<Page
    x:Class="CanTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CanTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF464646">
        <Button x:Name="button_sendMessage" Content="Send message" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" Height="31" Width="125" Click="Button_Click_sendMessage" Background="#33FFFFFF" IsEnabled="False"/>
        <Frame x:Name="indicator" Content="" HorizontalAlignment="Left" Margin="167,44,0,0" VerticalAlignment="Top" Height="31" Width="45" Background="Black"/>
        <Button x:Name="button_readSensorData" Content="Read adxl s receiver" HorizontalAlignment="Left" Margin="6,196,0,0" VerticalAlignment="Top" Background="#33FFFFFF" Click="button_Click_readSensorData"/>
        <Button x:Name="button_writeSensorData" Content="Write adxl as sender" HorizontalAlignment="Left" Margin="6,128,0,0" VerticalAlignment="Top" Background="#33FFFFFF" Click="button_Click_writeSensorData"/>

    </Grid>
</Page>
